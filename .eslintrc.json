{
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "next/core-web-vitals",
    "plugin:prettier/recommended"
  ],
  "settings": {
    "import/resolver": {
      "node": { "extensions": [".ts", ".tsx"] },
      "typescript": {}
    }
  },
  "rules": {
    "react/jsx-filename-extension": [
      "error",
      { "extensions": [".tsx", ".jsx"] }
    ],
    "import/prefer-default-export": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      { "ts": "never", "tsx": "never" }
    ]
  }
}
